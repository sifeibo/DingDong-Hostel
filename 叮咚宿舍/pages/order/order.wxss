/* pages/order/order.wxss */

.swiper-tab{
  padding-top:40rpx; 
  width: 100%;
  height: 70rpx;
  display: flex;
  flex-flow: row;
  justify-content: space-around;
  border-bottom:  2rpx solid #ccc;
  text-align: center;
}

.swiper-tab-item{
  width: 25%;
  color:#434343b2;
}

.active{
  color: #0dd1ae;
  border-bottom:  2rpx solid #0dd1ae;
}

swiper{
  width: 100%; 
  height: 1000rpx; 
  overflow: hidden;
}

/*订单item*/
.container {
  width: 715rpx;
  background-color: white;
  align-items: flex-start;
  font-size: 30rpx;
  margin: 20rpx;
  display: flex;
  flex-direction: column;
  border-radius:30rpx; 
  border: 1px solid #efefef;
  color: rgb(70, 69, 68)
}

/*时间栏*/
.container .orderdate{
  margin-left:40rpx; 
  margin-top: 30rpx;
  width: 660rpx;
  display: flex;
  flex-direction: row;
  justify-content: space-between;
}
.orderdate .orderdate-date{
  
}
.orderdate-state{
  color: red;
}

/*服务栏*/
.kehufuwu{
  margin-left:35rpx; 
  display: flex;
  flex-direction: column;
}

.kehufuwu-address{
  margin-top: 40rpx;
  width: 670rpx;
  height: 80rpx;
  display: flex;
  flex-direction: row;
}
.kehufuwu-address image{
  width: 70rpx;
  height: 70rpx;
  margin-right: 40rpx;
}
.wenzi{
  margin-top:5px; 
}
.kehufuwu-yuyuetime image{
  width: 62rpx;
  height: 62rpx;
  margin-right: 40rpx;
}
.kehufuwu-work image{
  width: 62rpx;
  height: 62rpx;
  margin-right: 40rpx;
}

.kehufuwu-yuyuetime{
  margin-left: 5rpx;
  margin-top: 20rpx; 
  width: 670rpx;
  height: 80rpx;
  display: flex;
  flex-direction: row;
}

.kehufuwu-work{
  margin-left: 10rpx;
  margin-top: 20rpx;
  width: 670rpx;
  display: flex;
  flex-direction: row;
}
.kehufuwu-work .wenzi{
  flex-wrap: wrap
}

.order-button{
  height: 100rpx;
  margin-top: 20rpx;
  margin-left: 20rpx;
  width: 670rpx; 
  display: flex;
  flex-direction: row;
  justify-content: space-between;
}
.but{
  width: 180rpx;
  height: 50rpx;
  text-align: center;
  padding-top: 10rpx;
  color: #555858;
  font-size:30rpx; 
  border: 1px solid rgb(180, 178, 178);
  border-radius: 40rpx;
}








/*阿姨端*/
.wrapper{
  margin-top: 20rpx;
}

.fuwu{
  background: #fff;
  margin: 20rpx;
  border-radius:20rpx;
}
.item{
  padding-right: 30rpx;
  padding-left: 30rpx;
  height: 150rpx;
  border-bottom: 1rpx solid #efefef;
  display: flex;
  justify-content: space-between;
  align-items: center;
}
.item .title {
  flex: 1;
  font-size: 32rpx;
  color: #333;
  display: flex;
  align-items: center;
}

.item image {
  width: 42rpx;
  height: 42rpx;
  margin-right: 40rpx;
}

.right{
  margin-left: 270rpx;
}

.more{
  width: 20rpx;
}