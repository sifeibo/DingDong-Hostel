/* pages/me/me.wxss */
.wrapper {
  padding-top: 20rpx;
}
.profile {
  height: 180rpx;
  display: flex;
  justify-content: space-between;
  align-items: center;
  padding: 0 40rpx;
} 
.profile .avatar {
  width: 90rpx;
  height: 90rpx;
  margin-right: 40rpx;
  border-radius:50%;  
}
.profile .info {
  display: flex;
  flex: 1;
  font-size: 24rpx;
  color: #abb4bf;
}
.profile .name {
  font-size: 40rpx;
  color: #333;
}
.profile .info .text {
  display: flex;
  flex-direction: column;
  justify-content: space-around;
  display: -webkit-box;
  -webkit-box-orient: vertical;
  -webkit-line-clamp: 1;
  overflow: hidden;
}
.profile .info .mobile{
  
}
.profile .more {
  display: flex;
  align-items: center;
}
.profile .more image {
  width: 30rpx;
  height: 30rpx;
}
.profile .more .reddot {
  width: 16rpx;
  height: 16rpx;
  border-radius: 50%;
  background: #ff5959;
  margin-right: 10rpx;
}