/* pages/clean/vote/vote.wxss */
/* 搜索框 */
.search {
  background: #fff;
  position: fixed;
  z-index: 4;
  width: 100%;
  height: 88rpx;
  top:0;
  left: 0;
  display: flex;
}
.district{
  margin-left:40rpx; 
  font-size: 30rpx;
  line-height: 82rpx;
  display: flex;
}
.district image{
  margin-top:24rpx; 
  width: 40rpx;
  height: 40rpx;
}
.searchWrap {
  width: 100%;
  height: 54rpx;
  margin: 15rpx 20rpx;
  background: #f2f2f2;
  border-radius: 28rpx;
  box-sizing: border-box;
  padding: 0 20rpx;
}
.searchInput{
  display: inline-block;
  margin-left: 20rpx;
  width: calc(100% - 50rpx);
  line-height: 56rpx;
  font-size: 24rpx;
  vertical-align: middle;
  margin-bottom:10rpx; 
}
.iconS{
  margin-top:15rpx; 
}

input[type='text']{
  border: 1px solid #eee;
}
.scroll{
  margin-top: 88rpx;
  width: 100%;
  height: 1050rpx;
}

.item{
  width: 90%;
  margin-left: 5%;
  margin-top: 20rpx;
  height: 200rpx;
  position: relative;
  overflow: hidden;
  border-radius: 10rpx; 
}
.back{
  width: 100%;
  position: absolute;
  z-index: -1;
  opacity: 0.2;
}
.xuehao{
  position: absolute;
  font-size: 25rpx;
  color: gray;
  left: 10rpx;
  top: 8rpx;
}
.content{
  position: absolute;
  font-size: 25rpx;
  text-indent: 2em;
  left: 5rpx;
  top: 50rpx;
}
.vote{
  position: absolute;
  font-size: 25rpx;
  right: 20rpx;
  bottom: 10rpx;
  display: flex;
  align-items: center;
  justify-content: space-between;
  width: 85rpx;
}
.vote image{
  width: 30rpx;
  height: 30rpx;
}
.vote text{
  color: gray;
}

.qipao{
  width: 70rpx;
  height: 70rpx;
  position: absolute;
  bottom: 30rpx;
  right: 40rpx;
}